{
  "manifest_version": 2,

  "name": "Salati",
  "short_name " : "Salati",
  "description": "Get Accurate Prayer times",
  "version": "1.0",

  "permissions": [
    "alarms",
    "notifications",
    "background", 
    "tts",
    "storage",
    "geolocation",
    "webRequest",
    "http://*/*",
    "https://*/*",
    "webRequestBlocking",
    "tabs"
  ],
  "background": {
    "scripts": ["js/PrayTimes.js", "js/jquery-3.2.1.min.js", "js/constants.js", "js/background.js"],
    "persistent": true
  },

  "browser_action": {
    "default_icon": "res/logo.png",
    "default_popup": "pages/popup.html"
  },

  "web_accessible_resources" : [
    "res/logo.png"
  ]
}